<aside class="col-12 col-lg-3 offset-lg-2 mt-5 mt-lg-0">
    <div class="mb-5">
        <a class="ad"
           href="https://www.vultr.com/?ref=8506759-6G">
            <img class="img-fluid"
                 alt="Vultr Banner Ad"
                 src="https://www.vultr.com/media/banners/banner_628x628.png">
        </a>
    </div>
    <h2 class="mb-3">
        <% if (category === "courses") { %>
            Courses
        <% } else { %>
            Related content
        <% } %>
    </h2>
    <ul class="nav flex-column mb-5">
        <% for (post of collections[category]) { %>
            <li>
                <% if (page.url === post.url) { %>
                    <%- post.data.pageTitle %>
                <% } else { %>
                    <a href="<%- post.url %>"><%- post.data.pageTitle %></a>
                <% } %>
            </li>
        <% } %>
    </ul>
</aside>